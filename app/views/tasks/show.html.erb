<h1> <%= @task.title %> </h1>

<p>  <%= @task.details %> </p>

<%# <p>  <%= @task.completed %>
<p> <% if @task.completed %>
<i class="fa-solid fa-square-check"></i>
<% else %>
<i class="fa-regular fa-square"></i>
<%end%>
</p>

<p><%= link_to "Back to list", tasks_path %></p>

<p><%= link_to "Edit the task", edit_task_path(@task) %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
